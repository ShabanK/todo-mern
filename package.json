{
  "name": "todo-mern",
  "version": "1.0.0",
  "description": "A MERN-stack application, following a tutorial by Traversy Media",
  "main": "server.js",
  "author": "Shaban Khawar",
  "license": "MIT",
  "scripts": {
    "client-install": "yarn --cwd client install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "yarn start --prefix client",
    "dev": "concurrently \"yarn server\" \"yarn --cwd client start\"",
    "heroku-postbuild": "YARN_CONFIG_PRODUCTION=false yarn --cwd client install && yarn --cwd client build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.8.2"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "nodemon": "^2.0.2"
  }
}
